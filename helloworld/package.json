{
  "name": "helloworld",
  "displayName": "helloworld",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onNotebook:activeEditorChanged"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.refactorNotebook",
        "title": "Refactor Notebook",
        "icon": {
          "light": "./resources/light.svg",
          "dark": "./resources/dark.svg"
        }
      },
      {
        "command": "extension.toggleRefactorTag",
        "title": "Refactor Notebook",
        "icon": {
          "light": "./resources/light.svg",
          "dark": "./resources/dark.svg"
        }
      }
    ],
    "menus":{
      "notebook/toolbar": [
        {
          "command": "extension.refactorNotebook",
          "group": "navigation/execute@1",
          "when": "notebookType == jupyter-notebook",
          "enablement": "notebookCellType == code"
        }
      ],
      
      "notebook/cell/title": [
        {
          "command": "extension.toggleRefactorTag",
          "when": "notebookType == jupyter-notebook && notebookCellType == code",
          "group": "inline/cell@2",
          "category": "Refactor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
